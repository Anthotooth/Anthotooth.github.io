<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Random Joke Generator</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            text-align: center;
            margin: 50px;
        }
        button {
            padding: 10px 20px;
            font-size: 16px;
            cursor: pointer;
            background-color: #007bff;
            color: white;
            border: none;
            border-radius: 5px;
        }
        button:hover {
            background-color: #0056b3;
        }
        .joke {
            margin-top: 20px;
            font-size: 20px;
            color: #333;
        }
    </style>
</head>
<body>
    <h1>Random Joke Generator</h1>
    <button id="getJoke">Get a Joke</button>
    <div class="joke" id="joke">Click the button to generate a joke!</div>

    <script>
        const jokeButton = document.getElementById('getJoke');
        const jokeDiv = document.getElementById('joke');

        jokeButton.addEventListener('click', async () => {
            try {
                // Fetch a random joke from the JokeAPI
                const response = await fetch('https://official-joke-api.appspot.com/random_joke');
                const joke = await response.json();

                // Display the joke
                jokeDiv.innerHTML = `<p>${joke.setup}</p><p><strong>${joke.punchline}</strong></p>`;
            } catch (error) {
                jokeDiv.textContent = 'Oops! Something went wrong. Please try again later.';
                console.error('Error fetching joke:', error);
            }
        });
    </script>
</body>
</html>